{
  "name": "ai-coding-playground",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @ai-playground/api dev\" \"pnpm --filter @ai-playground/web dev\"",
